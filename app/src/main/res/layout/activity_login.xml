<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E6E6E6">

    <TextView android:text="@string/loginPageTitle" android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_page_rectangle"
        android:textSize="32dp"
        android:textColor="#ffffff"
        android:textAlignment="center"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/siteNameTitle"
            android:textColor="#000000"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/siteNameEditText"
            android:text="@string/test_sender"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/usernameEditText"
            android:textColor="#000000"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/usernameEditText"
            android:text="@string/test_sender"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/passwordEditText"
            android:textColor="#000000"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/passwordEditText"
            android:text="@string/test_sender"
            android:password= "true"/>
    </LinearLayout>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Log in"
        android:background="@drawable/login_page_rectangle"
        android:textSize="32dp"
        android:textColor="#ffffff"/>

</LinearLayout>
